# Equinox Document Intelligence Processor - Environment Configuration
# Copy this file to .env in the project root directory and customize the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=project_db
POSTGRES_USER=db_user
POSTGRES_PASSWORD=db_password

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# Ollama Service Settings
OLLAMA_API_BASE_URL=http://localhost:11434/api
DEFAULT_LLM_MODEL=gemma2:9b

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# File Storage Paths (relative to project root)
UPLOAD_FOLDER=data/upload_folder
EXPORT_FOLDER=data/database_exports

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================

# Streamlit Settings
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Container Names
POSTGRES_CONTAINER_NAME=equinox_project_db_container
OLLAMA_CONTAINER_NAME=equinox_ollama_container

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode Settings
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# USAGE INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env in the project root directory:
#    cp config/env.example .env
#
# 2. Uncomment and modify the values you want to customize
#
# 3. Restart the application after making changes
#
# 4. For detailed configuration options, see docs/DEVELOPER_GUIDE.md 